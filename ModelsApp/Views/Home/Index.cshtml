@using ModelsApp.ViewModels
@using ModelsApp.Models
@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
<form class="form-inline">
    <label>Select restaurant ID:</label>
    <select name="fileID" class="form-control">
        @foreach (FileModel file in Model.Files)
        {
            <option value="@file.Id">@file.Name</option>
        }
    </select>
    <input type="submit" />
</form>

<br />
<table class="table">
    <tr>
        <th>           
            Dish
        </th>
        <th>
           File_ID
        </th>   
        <th>
            Price
        </th>           
       
    </tr>
    @foreach (Menu p in Model.Menus)
    {
        <tr>
            <td>@p.Dish</td>
            <td>@p.File_Name</td>
            <td>@p.Price</td>
        </tr>
    }
</table>